            <TextView
                android:id="@+id/credits4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="4" />


        </TableRow>
        <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/credits5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="In-semester Exam" />

        <TextView
            android:id="@+id/credits6"
            android:layout_width="0dp"
            android:layout_weight="1"
